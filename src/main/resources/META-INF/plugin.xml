<idea-plugin>
    <id>com.crhistianm.netrwoon</id>

    <name>Netrwoon</name>

    <vendor url="https://github.com/CrhistianMRe">CrhistianMRe</vendor>

   <description><![CDATA[
    Netrw-based plugin for IntelliJ.
   awdwadawdawdawdadawdawdawdawdwadwa
   ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.crhistianm.netrwoon.states.SettingsState"/>

        <applicationConfigurable
                parentId="tools"
                instance="com.crhistianm.netrwoon.settings.SettingsConfigurable"
                key="com.crhistianm.netrwoon.settings"
                displayName="Netrwoon Settings"/>

    </extensions>

    <actions>
    <group id="com.crhistianm.netrwoon.actionsGroup" text="Netrwoon" description="Netrwoon plugin actions" popup="true" icon="icons/pluginIcon.svg">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>
        <action id="NetrwoonOpen" class="com.crhistianm.netrwoon.actions.OpenNetrwoonAction" text="Open Netrwoon">
            <add-to-group group-id="com.crhistianm.netrwoon.actionsGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
